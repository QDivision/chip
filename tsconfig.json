{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "composite": false,
    "incremental": true,
    "tsBuildInfoFile": "./tsBuildInfo.json",
    "removeComments": false,
    "noEmit": false,
    "importHelpers": false,
    "downlevelIteration": false,
    "isolatedModules": false,
    "newLine": "LF",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
